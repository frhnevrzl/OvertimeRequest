@{
    Layout = "~/Views/Shared/AdminLTE/_Layout2.cshtml";
}
<div class="container container-fluid">
    @*<input id="role" style="display:none" value="@ViewData["role"]">*@
    <h1>Approval</h1>
    <table id="tableOvertimeapply" class="table table-responsive table-hover table-bordered">
        <thead>
            <tr>
                <th>No.</th>
                <th>NIP</th>
                <th>Status</th>
                <th>Overtime Apply Id</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="bodyManager">
        </tbody>
    </table>
</div>
<div class="modal fade" id="detailapprove" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detail</h5>
                <button class="btn btn-primary" data-dismiss="modal">
                    <i style="color:white" aria-hidden="true" class="fa fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="detailapprove">
                <form id="formPersonUpd" action="">
                    <div class="row">
                        <div class="col-6 my-1">
                            <label for="employeename" class="col-form-label">Employee Name</label>
                            <input type="text" class="form-control" id="employeename" aria-describedby="employeenameHelp">
                            <div id="employeenameHelp" class="form-text"></div>
                        </div>
                        <div class="col-6 my-1">
                            <label for="submissionDate" class="col-form-label">Submission Date</label>
                            <input type="datetime" class="form-control" id="submissionDate" aria-describedby="submissionDateHelp">
                            <div id="submissionDateHelp" class="form-text"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 my-1">
                            <label for="requestDetail" class="col-form-label">Request Details</label>
                            <input type="text" class="form-control" id="requestDetail" aria-describedby="requestDetailHelp" disabled>
                            <div id="requestDetailHelp" class="form-text"></div>
                        </div>
                    </div>
                    <div>
                        <input type="text" class="form-control" style="display:none" id="overtimeid">
                        <input type="text" class="form-control" style="display:none" id="nip">
                    </div>
                    <div class="modal-footer">
                        <button id="UpdateBtn" type="button" class="btn btn-primary">Approve</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="rejectBtn">Reject</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/ApprovalRequest.js" asp-append-version="true"></script>
}